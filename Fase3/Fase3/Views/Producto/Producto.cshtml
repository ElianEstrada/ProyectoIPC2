
@{
    ViewBag.Title = "Producto";
    Layout = "~/Views/Layauts/BarraNavegacion.cshtml";
}

<h2> Registrar Producto</h2>

<div class="row">
    <div class="col m12">
        <div class="card">
            <div class="card-content black-text">
                <span class="card-title"> Registrar Producto </span>
                @using (Html.BeginForm("registrarBodega", "Producto", FormMethod.Post))
                {
                    <form id="MyForm">
                        <div class="col m6">
                            Código Producto:
                            <input name="codigoProducto" placeholder="Código Producto" type="text" required />
                            Nombre:
                            <input name="nombreProducto" placeholder="Nombre Producto" type="text" required />
                            Presentación:
                            <input name="presentacion" placeholder="Presentacion" type="text" required />
                            <label>
                                <input class="with-gap" type="radio" name="grupo1" checked/>
                                <span>Saldo</span>
                            </label>
                            <label>
                                <input class="with-gap" type="radio" name="grupo1"/>
                                <span>Lotes</span>
                            </label>
                        </div>
                        <div class="col m6">
                            Código de Barra:
                            <input name="codigoBarra" placeholder="Código de Barra" type="text" required />
                            Descripción:
                            <textarea name="descripcion" rows="4" cols="5" style="height: 49px"> </textarea>
                            Clasificación:
                            <input name="clasificacion" placeholder="Clasificación" type="text" required />
                        </div>
                        <button class="btn blue waves-effect waves-light" type="submit">
                            Crear
                            <i class="material-icons right">send</i>
                        </button>
                        <a class="btn green" href="Pasillo"> Agregar Pasillo <i class="material-icons right">add_circle</i> </a>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

