@model LinkedList<Entidad.Estante>

@{
    ViewBag.Title = "Nivel";
    Layout = "~/Views/Layauts/BarraNavegacion.cshtml";
}

<h1> Registrar Nivel </h1>

<div class="row">
    <div class="col m12">
        <div class="card">
            <div class="card-content black-text">
                <span class="card-title"> Crear Nivel </span>
                @using (Html.BeginForm("registrarPasillo", "Bodega", FormMethod.Post))
                {
                    <form id="MyForm">
                        Letra Estante:
                        <div class="input-field">
                            <select name="letraEstante" required>
                                <option value="" disabled selected>Elije un Estante</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.letra"> @item.letra </option>
                                }
                                @*<option value="1">1</option>
                                    <option value="2">2</option>*@
                            </select>
                        </div>
                        Número de Nivel:
                        <input name="numeroPasillo" placeholder="Número de Nivel" type="text" required />
                        Alto:
                        <input name="alto" placeholder="Alto en Metros" type="number" step="0.01" required />
                        <button class="btn blue waves-effect waves-light" type="submit">
                            Crear
                            <i class="material-icons right">send</i>
                        </button>
                        <a class="btn blue-grey" href="Estante"> Regresar <i class="material-icons right">arrow_back</i> </a>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var elems = document.querySelectorAll('select');
        var instances = M.FormSelect.init(elems);
    });
</script>


