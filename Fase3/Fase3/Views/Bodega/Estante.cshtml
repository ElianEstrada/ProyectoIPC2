@model LinkedList<Entidad.Pasillo>

@{
    ViewBag.Title = "Estante";
    Layout = "~/Views/Layauts/BarraNavegacion.cshtml";
}

<h1> Registrar Estante </h1>

<div class="row">
    <div class="col m12">
        <div class="card">
            <div class="card-content black-text">
                <span class="card-title"> Crear Estante </span>
                @using (Html.BeginForm("registrarEstante", "Bodega", FormMethod.Post))
                {
                    <form id="MyForm">
                        Número de Pasillo:
                        <div class="input-field">
                            <select name="numeroPasillo" required>
                                <option value="" disabled selected>Elije un Pasillo</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.idPasillo"> @item.idPasillo </option>
                                }
                            </select>
                        </div>
                        Letra:
                        <input name="letra" placeholder="Letra del Estante" type="text" required />
                        Largo:
                        <input name="largo" placeholder="Largo en Metros" type="number" step="0.01" required />
                        Ancho:
                        <input name="ancho" placeholder="Ancho en Metros" type="number" step="0.01" required />
                        Alto:
                        <input name="alto" placeholder="Alto en Metros" type="number" step="0.01" required />
                        <button class="btn blue waves-effect waves-light" type="submit">
                            Crear
                            <i class="material-icons right">send</i>
                        </button>
                        <a class="btn green" href="Nivel"> Agregar Nivel <i class="material-icons right">add_circle</i> </a>
                        <a class="btn blue-grey" href="Pasillo"> Regresar <i class="material-icons right">arrow_back</i> </a>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var elems = document.querySelectorAll('select');
        var instances = M.FormSelect.init(elems);
    });
</script>