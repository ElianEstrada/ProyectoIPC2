
@{
    ViewBag.Title = "Pasillo";
    Layout = "~/Views/Layauts/BarraNavegacion.cshtml";
}

<h1> Registrar Pasillo </h1>

<div class="row">
    <div class="col m12">
        <div class="card">
            <div class="card-content black-text">
                <span class="card-title"> Crear Pasillo </span>
                @using (Html.BeginForm("registrarPasillo", "Bodega", FormMethod.Post))
                {
                    <form id="MyForm">
                        Código Bodega:
                        <input name="codigoBodega" placeholder="Código Bodega" type="text" />
                        Número de Pasillo:
                        <input name="numeroPasillo" placeholder="Número de Pasillo" type="text" />
                        Largo: 
                        <input name="largo" placeholder="Largo en Metros" type="number" step="0.01"/>
                        Ancho:
                        <input name="ancho" placeholder="Ancho en Metros" type="number" step="0.01"/>
                        <button class="btn blue waves-effect waves-light" type="submit">
                            Crear
                            <i class="material-icons right">send</i>
                        </button>
                        <a class="btn green" href="Pasillo"> Agregar Estante <i class="material-icons right">add_circle</i> </a>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

