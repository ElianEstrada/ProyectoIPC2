@model  LinkedList<Entidad.Bodega>

@{
    ViewBag.Title = "Pasillo";
    Layout = "~/Views/Layauts/BarraNavegacion.cshtml";
}

<h1> Registrar Pasillo </h1>

<div class="row">
    <div class="col m12">
        <div class="card">
            <div class="card-content black-text">
                <span class="card-title"> Crear Pasillo </span>
                @using (Html.BeginForm("registrarPasillo", "Bodega", FormMethod.Post))
                {
                    <form id="MyForm">
                        Código Bodega:
                        <div class="input-field">
                            <select name="codigoBodega" required>
                                <option value="" disabled selected>Elije una Bodega</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.idBodega"> @item.idBodega </option>
                                }
                            </select>
                        </div>
                        Número de Pasillo:
                        <input name="numeroPasillo" placeholder="Número de Pasillo" type="text" required/>
                        Largo:
                        <input name="largo" placeholder="Largo en Metros" type="number" step="0.01" required/>
                        Ancho:
                        <input name="ancho" placeholder="Ancho en Metros" type="number" step="0.01" required/>
                        <button class="btn blue waves-effect waves-light" type="submit">
                            Crear
                            <i class="material-icons right">send</i>
                        </button>
                        <a class="btn green" href="Estante"> Agregar Estante <i class="material-icons right">add_circle</i> </a>
                        <a class="btn blue-grey" href="Bodega"> Regresar <i class="material-icons right">arrow_back</i> </a>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var elems = document.querySelectorAll('select');
        var instances = M.FormSelect.init(elems);
    });
</script>

