@model LinkedList<Entidad.Proveedor>
@{
    ViewBag.Title = "Entrada";
    Layout = "~/Views/Layauts/BarraNavegacion.cshtml";
}

<h2>Entrada</h2>


<div class="row">
    <div class="col m12">
        <div class="card z-depth-3">
            <div class="card-content">
                <span class="card-title"> Registrar Entrada </span>
                @using (Html.BeginForm("registrarEntrada", "Entrada", FormMethod.Post))
                {
                    <form>
                        <div class="row">
                            <div class="col m6">
                                Código Entrada:
                                <input type="number" name="codigoEntrada" step="0.01" placeholder="Código Entrada" required />
                                Proveedor:
                                <select name="proveedor" required>
                                    <option selected disabled>Elija Su Opción</option>
                                    @foreach (var item in Model)
                                    {
                                        <option> @item.nit, @item.nombre </option>
                                    }
                                </select>
                            </div>
                            <div class="col m6">
                                Fecha Entrada:
                                <input type="date" name="fecha" required />
                                <button class="btn green">
                                    Registrar Entrada
                                    <i class="material-icons right"> add_circle </i>
                                </button>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
